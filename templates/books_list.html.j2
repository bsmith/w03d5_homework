{% extends "base.html.j2" %}
{% import "macros.html.j2" as macros %}
{% block content %}

<main>

    <p>Sort by:
        <a href="{{ url_for('books.books_list', sort_type='title') }}">title</a>,
        <a href="{{ url_for('books.books_list', sort_type='author') }}">author</a>,
        <a href="{{ url_for('books.books_list', sort_type='accession_id') }}">accession</a>
    </p>

    <ul class="bookslist">
    {% for book in books_list %}
        <li class="book">
            <span class="details">
                <span class="title">
                    <a href="{{ url_for('books.books_single', accession_id=book.accession_id) }}">{{ book.title }}</a>
                </span>
                by <span class="author">{{ book.author }}</span><br>
                â€” <span class="genre">{{ book.genre }}</span>
                {# {% if book.checked_out %}
                <span class="checked-out">checked out</span>
                {% endif %} #}
            </span>
            <span class="buttons">
                {{ macros.checkoutin_button(book, loop.index0, "inline") }}
            </span>
        </li>
    {% endfor %}
    </ul>

    <form class="create" action="{{ url_for('books.books_create') }}"
            method="POST">
        <h3>Create book</h3>
        <div>
            <label for="book_title">Title:</label>
            <input type="text" id="book_title" name="title">
        </div>
        <div>
            <label for="book_author">Author:</label>
            <input type="text" id="book_author" name="author">
        </div>
        <div>
            <label for="book_genre">Genre:</label>
            <select id="book_genre" name="genre">
                <option value="fantasy">Fantasy</option>
                <option value="popular mathematics">Popular Mathematics</option>
                <option value="language &amp; reference">Language &amp; Reference</option>
                <option value="fiction">Fiction</option>
            </select>
        </div>

        <button type="submit">&#x2705; Create Book</button>
    </form>

</main>

{% endblock %}